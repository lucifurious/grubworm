{
	"name":         "dreamfactory/grubworm",
	"description":  "Laravel Data Burrower",
	"keywords":     [
		"generator",
		"reverse-engineer",
		"database",
		"laravel",
		"cli",
		"command"
	],
	"license":      "MIT",
	"type":         "library",
	"require":      {
		"laravel/framework": "5.0.*"
	},
	"require-dev":  {
		"barryvdh/laravel-ide-helper": "~2.0",
		"doctrine/dbal":               "~2.3",
		"phpunit/phpunit":             "~4.0",
		"way/generators":              "~3.0",
		"phpunit/phpunit":             "~4.0",
		"phpspec/phpspec":             "~2.1"
	},
	"autoload":     {
		"classmap": [
			"database"
		],
		"psr-4":    {
			"DreamFactory\\Laravel\\Grubworm\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts":      {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan vendor:publish",
			"php artisan optimize"
		],
		"post-update-cmd":  [
			"php artisan clear-compiled",
			"php artisan vendor:publish --tag=public --force",
			"php artisan optimize"
		]
	},
	"config":       {
		"preferred-install": "dist"
	}
}
